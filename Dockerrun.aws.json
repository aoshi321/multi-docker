{
  "AWSEBDockerrunversion": "2",
  "containerDefinitions": [
    {
      "name":"client",
      "image": "aoshi/multi-client",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name":"server",
      "image": "aoshi/multi-server",
      "hostname": "api",
      "essential": false,
      "memory": 128
    },
    {
      "name":"worker",
      "image": "aoshi/multi-worker",
      "hostname": "worker",
      "essential": false,
      "memory": 128
    },
    {
      "name":"nginx",
      "image": "aoshi/multi-ngnix",
      "hostname": "nginx",
      "essential": true,
      "portMappings":[
	{
	"hostPort": 80,
	"containerPort": 80
	}
      ],
      "links":["client","server"],
      "memory": 128
    }
  ]
}
