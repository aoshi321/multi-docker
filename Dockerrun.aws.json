{
  "AWSEBDockerrunversion": 2,
  "containerDefinitions": [
    {
      "name":"client",
      "image": "aoshi/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name":"server",
      "image": "aoshi/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name":"worker",
      "image": "aoshi/multi-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name":"nginx",
      "image": "aoshi/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings":[
	{
	"hostPort": 80,
	  "containerPort": 80
	}
      ],
      "links":["client","server"]
    }
  ]
}
